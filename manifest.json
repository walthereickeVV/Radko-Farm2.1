  "protocol_handlers": [
    {
      "protocol": "web+radkopharm",
      "url": "/protocol/%s"
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "prescription",
          "accept": ["image/*", ".pdf"]
        }
      ]
    }
  },
  
  "capture_links": "existing-client-event",
  
  "handle_links": "preferred",
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "image/*": [".png", ".jpg", ".jpeg", ".gif"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  
  "permissions": [
    "geolocation",
    "notifications",
    "camera",
    "microphone",
    "payment",
    "clipboard-write",
    "clipboard-read"
  ],
  
  "display_override": ["window-controls-overlay", "minimal-ui"],
  
  "id": "/",
  
  "dir": "ltr",
  
